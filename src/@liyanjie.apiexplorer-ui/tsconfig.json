{
    "compilerOptions": {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "outDir": "build",
        "types": [
            "core-js",
            "jasmine",
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}